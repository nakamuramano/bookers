 <body>
    <h1>Editing Book</h1>


  <div class="box">
    <%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
  </div>

  <div class="box">
    <label for="book_body">Body</label>
    <%= f.text_area :body %>
  </div>

  <div class="box">
    <%= f.submit 'Update Book' %>
  </div>
    <% end %>

    <%= link_to 'Show', book_path(@book.id) %>
    <%= link_to 'Back', '/books' %>

  </body>